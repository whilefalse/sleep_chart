<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :date %>
  <%= date_select f, :date %>
  <%= error_tag f, :date %>

  <%= label f, :slept %>
  <%= checkbox f, :slept %>
  <%= error_tag f, :slept %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
